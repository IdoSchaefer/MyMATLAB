function u = chebpol(A, u0, m, leftb, rightb)
    y = cos(((1:m)*2 - 1)*pi/(2*m));
    z = 0.5*(y*(rightb - leftb) + rightb + leftb);
    c = dct(exp(z))/sqrt(m);
    c(2:m) = c(2:m)*sqrt(2);
    v1 = u0;
    Acheb = (2*A - leftb - rightb)/(rightb - leftb);
    v2 = Acheb*u0;
    u = c(1)*v1 + c(2)*v2;
    for k = 3:m
        vk = 2*Acheb*v2 - v1;
        u = u + c(k)*vk;
        v2 = vk;
        v1 = v2;
    end
end
        